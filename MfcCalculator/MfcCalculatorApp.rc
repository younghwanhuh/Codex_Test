#include "resource.h"
#include <afxres.h>

IDD_ABOUTBOX DIALOGEX 0, 0, 180, 80
STYLE DS_SETFONT | WS_CAPTION | WS_SYSMENU | WS_POPUP
CAPTION "About"
FONT 9, "Segoe UI", 0, 0, 0x0
BEGIN
    LTEXT "MfcCalculator", IDC_STATIC, 10, 10, 160, 20
    LTEXT "Basic calculator using MFC UI.", IDC_STATIC, 10, 30, 160, 20
    DEFPUSHBUTTON "OK", IDOK, 65, 55, 50, 14
END

IDD_MFCCALCULATOR_DIALOG DIALOGEX 0, 0, 280, 150
STYLE DS_SETFONT | WS_CAPTION | WS_MINIMIZEBOX | WS_SYSMENU
CAPTION "Calculator"
FONT 9, "Segoe UI", 0, 0, 0x0
BEGIN
    LTEXT "First value:", IDC_STATIC, 10, 12, 60, 12
    EDITTEXT IDC_EDIT_FIRST, 10, 24, 120, 14, ES_AUTOHSCROLL
    LTEXT "Second value:", IDC_STATIC, 150, 12, 70, 12
    EDITTEXT IDC_EDIT_SECOND, 150, 24, 120, 14, ES_AUTOHSCROLL
    LTEXT "Operation:", IDC_STATIC, 10, 52, 60, 12
    COMBOBOX IDC_COMBO_OPERATION, 10, 64, 120, 70, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    PUSHBUTTON "Calculate", IDC_BUTTON_CALCULATE, 150, 64, 120, 14
    LTEXT "Result:", IDC_STATIC, 10, 96, 40, 12
    LTEXT "", IDC_STATIC_RESULT, 10, 110, 260, 16, SS_LEFT | SS_SUNKEN
END
